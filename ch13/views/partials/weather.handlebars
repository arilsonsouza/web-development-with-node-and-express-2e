{{#section 'head'}}
  <style>
    .weather-widget {
      border: 1px solid blue;
      margin: 4px;
      padding: 4px;
    }
  </style>
{{/section}}
<div class="weather-widget">
  {{#each partials.weatherContext}}
  <div class="location">
    <h3>{{location.name}}</h3>
    <a href="{{location.forecastUrl}}">
      <img src="{{iconUrl}}" alt="{{weather}}">
      {{weather}}, {{temp}}
    </a>
  </div>
  {{/each}}
  <small>
    Source: <a href="https://www.weather.gov/documentation/services-web-api">
    National Weather Service
    </a>
  </small>
</div>